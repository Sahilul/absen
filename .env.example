# Smart Absensi - Environment Configuration
# Copy file ini menjadi .env untuk production

# Application
APP_URL=http://localhost/absen
APP_ENV=development
APP_DEBUG=true

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=absen
DB_USER=root
DB_PASS=

# Security
SECRET_KEY=ganti_dengan_random_string_minimal_32_karakter
SESSION_LIFETIME=7200

# Features
QR_ENABLED=true
MENU_INPUT_NILAI_ENABLED=true
MENU_PEMBAYARAN_ENABLED=true
MENU_RAPOR_ENABLED=true

# Upload Settings
UPLOAD_MAX_SIZE=50M
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Email (optional untuk fitur notification)
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM_NAME="Smart Absensi"

# Timezone
TIMEZONE=Asia/Jakarta
